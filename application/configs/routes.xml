<?xml version="1.0" encoding="UTF-8"?>
<configdata>
    <production>
        <routes>
                    
            <home>
                <route>/</route>
                <defaults>
                    <controller>index</controller>
                    <action>index</action>
                </defaults>
                <reverse>/</reverse>
            </home>

            <awaiting>
                <route>/oczekujace</route>
                <defaults>
                    <controller>index</controller>
                    <action>awaiting</action>
                </defaults>
                <reverse>/oczekujace</reverse>
            </awaiting>

            <author type="Zend_Controller_Router_Route_Regex">
                <route>u/(.+)</route>
                <defaults>
                    <controller>index</controller>
                    <action>author</action>
                </defaults>
                <map>
                    <name>1</name>
                </map>
                <reverse>u/%s</reverse>
            </author>
            
            <view type="Zend_Controller_Router_Route_Regex">
                <route>p/(.+)-(.*)</route>
                <defaults>
                    <controller>index</controller>
                    <action>view</action>
                </defaults>
                <map>
                    <id>1</id>
                    <title>2</title>
                </map>
                <reverse>p/%s-%s</reverse>
            </view>
            
            <rules>
                <route>/regulamin</route>
                <defaults>
                    <controller>index</controller>
                    <action>rules</action>
                </defaults>
                <reverse>/regulamin</reverse>
            </rules>

            <contact>
                <route>/kontakt</route>
                <defaults>
                    <controller>index</controller>
                    <action>contact</action>
                </defaults>
                <reverse>/kontakt</reverse>
            </contact>

            <!-- POST -->     
            <postupload>
                <route>/dodaj</route>
                <defaults>
                    <controller>post</controller>
                    <action>upload</action>
                </defaults>
                <reverse>/dodaj</reverse>
            </postupload>

            <!-- USER -->

            <userlogin>
                <route>/poebaoadminlogin</route>
                <defaults>
                    <controller>user</controller>
                    <action>login</action>
                </defaults>
                <reverse>/poebaoadminlogin</reverse>
            </userlogin>
            
            <userlogout>
                <route>/logout</route>
                <defaults>
                    <controller>user</controller>
                    <action>logout</action>
                </defaults>
                <reverse>/logout</reverse>
            </userlogout>

            <!-- MODERATION -->
            <moderation>
                <route>/moderation</route>
                <defaults>
                    <controller>moderation</controller>
                    <action>list</action>
                </defaults>
                <reverse>/moderation</reverse>
            </moderation>

            <modcategory type="Zend_Controller_Router_Route_Regex">
                <route>moderation/category/(.+)/(.+)</route>
                <defaults>
                    <controller>moderation</controller>
                    <action>setcategory</action>
                </defaults>
                <map>
                    <id>1</id>
                    <category>2</category>
                </map>
                <reverse>moderation/category/%s/%s</reverse>
            </modcategory>

            <modflag type="Zend_Controller_Router_Route_Regex">
                <route>moderation/flag/(.+)/(.+)/(.+)</route>
                <defaults>
                    <controller>moderation</controller>
                    <action>flag</action>
                </defaults>
                <map>
                    <flag>1</flag>
                    <id>2</id>
                    <value>3</value>
                </map>
                <reverse>moderation/flag/%s/%s/%s</reverse>
            </modflag>

            <modstatus type="Zend_Controller_Router_Route_Regex">
                <route>moderation/status/(.+)/(.+)</route>
                <defaults>
                    <controller>moderation</controller>
                    <action>status</action>
                </defaults>
                <map>
                    <id>1</id>
                    <status>2</status>
                </map>
                <reverse>moderation/status/%s/%s</reverse>
            </modstatus>
            
        </routes>
    </production>

    <development extends="production">
    </development>
</configdata>